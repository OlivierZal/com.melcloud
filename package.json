{
  "name": "com.melcloud",
  "version": "39.1.1",
  "type": "module",
  "scripts": {
    "build": "npm run prepare && homey app validate --level publish",
    "build:css": "tailwindcss -i widgets/ata-group-setting/public/input.css -o widgets/ata-group-setting/public/output.css",
    "deploy": "npm run prepare && homey app install",
    "format": "prettier . --check",
    "format:css": "prettier widgets/ata-group-setting/public/output.css --ignore-path --write",
    "format:docs": "prettier README.md --ignore-path --write",
    "format:fix": "prettier . --write",
    "lint": "eslint . --flag unstable_ts_config",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build:css && npm run format:css && npm run format:docs && npm run lint:fix && npm run format:fix",
    "publish": "homey app publish"
  },
  "dependencies": {
    "@olivierzal/melcloud-api": "^13.4.0",
    "core-js": "^3.39.0",
    "homey-lib": "^2.32.8",
    "luxon": "^3.5.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@eslint/json": "^0.6.0",
    "@eslint/markdown": "^6.2.1",
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@stylistic/eslint-plugin": "^2.10.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.9",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.9.0",
    "daisyui": "^4.12.14",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-package-json": "^0.15.4",
    "eslint-plugin-perfectionist": "^3.9.1",
    "jiti": "^2.4.0",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0"
  }
}
