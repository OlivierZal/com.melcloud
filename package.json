{
  "name": "com.melcloud",
  "version": "42.1.0",
  "description": "MELCloud for Homey",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:css": "npx @tailwindcss/cli -i app.css -o widgets/ata-group-setting/public/dist.css && npx @tailwindcss/cli -i app.css -o widgets/charts/public/dist.css",
    "format": "prettier . --check",
    "format:docs": "prettier README.md --ignore-path --write",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build:css && npm run format:docs && npm run lint:fix && npm run format:fix"
  },
  "dependencies": {
    "@olivierzal/melcloud-api": "^21.0.0",
    "homey-lib": "^2.44.0",
    "luxon": "^3.7.2",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@html-eslint/eslint-plugin": "^0.52.0",
    "@html-eslint/parser": "^0.52.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@tailwindcss/cli": "^4.1.18",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.0.3",
    "apexcharts": "^5.3.6",
    "daisyui": "^5.5.14",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-package-json": "^0.85.0",
    "eslint-plugin-perfectionist": "^5.1.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-yml": "^1.19.1",
    "jsonc-eslint-parser": "^2.4.2",
    "prettier": "^3.7.4",
    "prettier-plugin-packagejson": "^2.5.20",
    "tailwind-csstree": "^0.1.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
