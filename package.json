{
  "name": "com.melcloud",
  "version": "37.1.3",
  "main": "app.ts",
  "prettier": {
    "experimentalTernaries": true,
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "build": "homey app validate --level publish && tsc -p 'tsconfig.checkjs.json'",
    "deploy": "homey app install",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run lint:fix && npm run format:fix",
    "publish": "homey app publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@stylistic/eslint-plugin": "^2.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.6",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-perfectionist": "^3.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.0-alpha.60"
  },
  "dependencies": {
    "@olivierzal/melcloud-api": "^6.1.4",
    "core-js": "^3.37.1",
    "luxon": "^3.4.4",
    "source-map-support": "^0.5.21"
  }
}
